<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/backgroundlogin"
    android:padding="30dp"
    tools:context=".feature.main.view.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/painel_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/painel_login">

            <ImageView
                android:id="@+id/logo_it"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@mipmap/logo_iotruck"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="@id/painel_login"
                app:layout_constraintStart_toStartOf="@id/painel_login"
                app:layout_constraintEnd_toEndOf="@id/painel_login"/>

            <TextView
                android:id="@+id/title_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_name"
                android:textAlignment="center"
                android:textColor="@color/blue_default"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/logo_it"/>

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stg_motoristas"
                android:textAlignment="center"
                android:textColor="@color/orange_default"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/title_login"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".90"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/input_login"
                android:hint="@string/ht_email"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                app:layout_constraintStart_toStartOf="@id/painel_login"
                app:layout_constraintEnd_toEndOf="@id/painel_login"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintWidth_percent=".90"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/input_login"
                android:hint="@string/ht_senha"
                android:inputType="textPassword"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintStart_toStartOf="@id/painel_login"
                app:layout_constraintEnd_toEndOf="@id/painel_login"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".76"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:onClick="login"
                android:text="@string/btn_entrar"
                android:textColor="@color/blue_default"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/et_password"
                app:layout_constraintStart_toStartOf="@id/painel_login"
                app:layout_constraintEnd_toEndOf="@id/painel_login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    app:layout_constraintHeight_percent=".20"
                    app:layout_constraintTop_toBottomOf="@id/btn_login"
                    app:layout_constraintStart_toStartOf="@id/painel_login"
                    app:layout_constraintEnd_toEndOf="@id/painel_login"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>