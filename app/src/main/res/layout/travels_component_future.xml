<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_future_cards"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".90"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scaleType="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_schedule"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
     >

        <TextView
            android:id="@+id/tv_future_travel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="AH564728"
            android:textColor="#FF5722"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/container_future_cards"
            app:layout_constraintStart_toStartOf="@id/container_future_cards"
            />

        <TextView
            android:id="@+id/tv_analyst_title_future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="ANALISTAS:"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_future_travel_name"
            app:layout_constraintStart_toStartOf="@id/container_future_cards"
            />

        <TextView
            android:id="@+id/tv_analyst_names_future"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sandra Cunha, Paulo Alberto, João Antônio"
            android:textColor="#1C1C1C"
            android:textSize="15sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_future_travel_name"
            app:layout_constraintStart_toEndOf="@id/tv_analyst_title_future"
            app:layout_constraintEnd_toEndOf="@id/container_future_cards"

            />

        <TextView
            android:id="@+id/tv_travel_title_future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="DESTINO:"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_analyst_title_future"
            app:layout_constraintStart_toStartOf="@id/container_future_cards"
            />

        <TextView
            android:id="@+id/tv_travel_destiny_future"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rua Sabugo de milho 456 - Lapa, São Paulo/SP - 06773645"
            android:textColor="#1C1C1C"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_analyst_names_future"
            app:layout_constraintStart_toEndOf="@id/tv_travel_title_future"
            app:layout_constraintEnd_toEndOf="@id/container_future_cards"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/tv_travel_date"
            android:textColor="#010A2C"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_travel_destiny_future"
            app:layout_constraintEnd_toEndOf="@id/container_future_cards"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>