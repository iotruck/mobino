<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.chat.view.ActivityChat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/card_background_schedule"
        android:scaleType="center"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/backarrow"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/iv_truck"
            android:src="@mipmap/truck"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F0011SP03"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_truck"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:text="Feed de atualizações"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_headerTitle"
            app:layout_constraintStart_toEndOf="@+id/iv_truck"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/container_header"
            app:layout_constraintEnd_toEndOf="@id/scrollView"
            app:layout_constraintStart_toStartOf="@id/scrollView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_today_cards"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".90"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleType="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintEnd_toEndOf="@id/container_content"
                app:layout_constraintStart_toStartOf="@id/container_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_schedule"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tv_today_travel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Waldesio P."
                    android:textColor="@color/orange_default"
                    android:textSize="22sp"
                    app:layout_constraintTop_toTopOf="@id/container_today_cards"
                    app:layout_constraintStart_toStartOf="@id/container_today_cards"
                    />

                <TextView
                    android:id="@+id/tv_analyst_title_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Atualização"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_today_travel_name"
                    app:layout_constraintStart_toStartOf="@id/container_today_cards"
                    />

                <ImageView
                    android:id="@+id/iv_btn_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/play"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_analyst_title_today"
                    app:layout_constraintStart_toStartOf="@id/container_today_cards"/>

                <TextView
                    android:id="@+id/tv_travel_title_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:27"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="180dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_btn_play"
                    app:layout_constraintEnd_toEndOf="@+id/container_today_cards"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_future_cards"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".90"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleType="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/container_today_cards"
                app:layout_constraintStart_toStartOf="@id/container_content"
                app:layout_constraintEnd_toEndOf="@id/container_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_schedule">

                <TextView
                    android:id="@+id/tv_future_travel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Sandra Cunha"
                    android:textColor="#FF5722"
                    android:textSize="22sp"
                    app:layout_constraintTop_toTopOf="@id/container_future_cards"
                    app:layout_constraintStart_toStartOf="@id/container_future_cards"
                    />

                <TextView
                    android:id="@+id/tv_analyst_title_future"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Confirmação"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_future_travel_name"
                    app:layout_constraintStart_toStartOf="@id/container_future_cards"
                    />

                <ImageView
                    android:id="@+id/iv_btn_play_analyst"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/play"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_analyst_title_future"
                    app:layout_constraintStart_toStartOf="@id/container_future_cards"/>

                <TextView
                    android:id="@+id/hour_analyst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:37"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="180dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_btn_play_analyst"
                    app:layout_constraintEnd_toEndOf="@+id/container_future_cards"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>